{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
            "label": "backend: dir",
            "command": "cd ../backend",
            "type": "shell"
        },

        {
            "label": "mongodb: start",
            "command": "mongod",
            "type": "shell",
            "presentation": {
                "reveal": "silent",
                "panel": "new",
                "showReuseMessage": false
            }
        },
        {
            "label": "backend: start",
            "command": "npm run dev",
            //"dependsOn": [
               // "mgd"
           // ],
            "options": {
                "cwd": "../backend"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": false
            },

            "type": "shell"
        },
        {
            "label": "frontend: start",
            "command": "npm start dev",           
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": false
            },
            "type": "shell"
        }
    ]
}